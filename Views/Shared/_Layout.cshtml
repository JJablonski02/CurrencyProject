<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CurrencyProject</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>



<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-585251 border-bottom box-shadow border-dark mb-3">
            <div class="container">
                
                <a class="navbar-brand" asp-area="" asp-controller="" asp-action=""> <b>Currency Rate</b> </a>

                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white " asp-area="" asp-controller="currency" asp-action="ConvertCurrencies">Kalkulator walut</a>
                        </li>
                         <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="CurrencyDate" asp-action="DateReview">Historia kursów</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="currency" asp-action="Policy">Polityka Prywatności</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <style>
        
        

        .navbar{
            color: #ffffff;
            background-color: #009879;
            font-size: 0.6cm;
            min-width: 700px;
            border-radius: 5px 5px 0 0;
            overflow: hidden;
            box-shadow: 0 0 23px rgba(0, 0, 0, 0.15);
            
            
        }
        .navbar-brand{
            margin: 15px;
            font-size: 0.6cm;

        }
    </style>

    <div class="container">
        <main role="main" class="pb-3" >
            
           
            @RenderBody()
        </main>
    </div>

    <footer class="border-top border-dark footer text-muted">
        <div class="container">
            &copy Copyright 2023 - Currency Rate Jakub Jabłoński - <a asp-area="" asp-controller="Currency" asp-action="Policy">Polityka Prywatności</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
